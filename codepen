let americanToBritishSpelling = {
  "accessorize": "accessorise",
  "accessorized": "accessorised",
  "accessorizes": "accessorises",
  "accessorizing": "accessorising",
  "acclimatization": "acclimatisation",
  "acclimatize": "acclimatise",
  "acclimatized": "acclimatised",
  "acclimatizes": "acclimatises",
  "acclimatizing": "acclimatising"}

let americanToBritishTitles = {
  'Mr.': 'Mr',
  'Mrs.': 'Mrs',
  'Ms.': 'Ms',
  'Mx.': 'Mx',
  'Dr.': 'Dr',
  'Prof.': 'Prof'
}








/* -------------- algorythym -------*/
let text = "We had a party at my friend's condo. acclimatizing accessorize yellow light Mr. Dr. Cr "
let americanOnlyKeys = Object.keys(americanOnly)

let amerMatch = americanOnlyKeys.filter(function(x){return new RegExp(x).test(text)})

/*replace function*/

function searchAndReplace(library, text){
  let americanOnlyKeys = Object.keys(library)
  let amerMatch = americanOnlyKeys.filter(function(x){return new RegExp(x).test(text)})
  let replace = ''
  let counter = 0
  if (amerMatch.length == 0){
    return text
  }
  for (let i = 0; i < amerMatch.length; i++) {
    counter = counter + 1
    if (counter > 1){
      replace = replace.replace(new RegExp(amerMatch[i]), library[amerMatch[i]])
    }
    else{
  replace = text.replace(new RegExp(amerMatch[i]), library[amerMatch[i]])
    }
    
  }
  
  return replace
}

let americanOnlyReplace = searchAndReplace(americanOnly, text)

let americanToBritishSpellingReplace = searchAndReplace(americanToBritishSpelling, americanOnlyReplace)

let americanToBritishTitlesReplace = searchAndReplace(americanToBritishTitles, americanToBritishSpellingReplace)
console.log(americanToBritishTitlesReplace)
